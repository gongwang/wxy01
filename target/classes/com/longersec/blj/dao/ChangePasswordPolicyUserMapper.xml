<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.longersec.blj.dao.ChangePasswordPolicyUserDao">
	<resultMap id="BaseResultMap" type="com.longersec.blj.domain.ChangePasswordPolicyUser">
		<id column="policy_id" jdbcType="INTEGER" property="policy_id"/>
		<id column="user_id" jdbcType="VARCHAR" property="user_id"/>
	</resultMap>

	<resultMap id="changePasswordPolicyUserRecordCounts" type="java.lang.Long">
		<result column="recordCounts" jdbcType="BIGINT"/>
	</resultMap>

	<insert id="addChangePasswordPolicyUser" parameterType="com.longersec.blj.domain.ChangePasswordPolicyUser">
		INSERT INTO lsblj_change_password_policy_user
		<set>
		<if test="policy_id != null">`policy_id`=#{policy_id},</if>
		<if test="user_id != null">`user_id`=#{user_id},</if>
		</set>
	</insert>

	<update id="editChangePasswordPolicyUser" parameterType="com.longersec.blj.domain.ChangePasswordPolicyUser">
		UPDATE lsblj_change_password_policy_user
		<set>
		<if test="policy_id != null">`policy_id`=#{policy_id},</if>
		<if test="user_id != null">`user_id`=#{user_id},</if>
		</set>
		where id=#{id}
	</update>

	<delete id="delChangePasswordPolicyUser" parameterType="java.util.List">
		DELETE FROM lsblj_change_password_policy_user
		where id IN (
		<foreach collection="list" item="item" separator=",">
		#{item},
		</foreach>
		0)
	</delete>
	<select id="findAll" resultMap="BaseResultMap, changePasswordPolicyUserRecordCounts">
		SELECT 
		SQL_CALC_FOUND_ROWS 
		* FROM lsblj_change_password_policy_user 
		<if test="page_start != null and page_length != null">
		LIMIT #{page_start},#{page_length}
		</if>
		;SELECT found_rows() AS recordCounts;
	</select>
</mapper>
